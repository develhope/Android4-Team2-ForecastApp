<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ABA4FF">


    <TextView
        android:id="@+id/tomorrow_hourTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_min_dimensions_card_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tomorrow_image1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tomorrow_image1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/sun"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tomorrow_tempTV"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tomorrow_hourTV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tomorrow_tempTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="@dimen/text_min_dimensions_card_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tomorrow_image2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tomorrow_image1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tomorrow_image2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/drop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tomorrow_precipitationTV"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tomorrow_tempTV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tomorrow_precipitationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_min_dimensions_card_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tomorrow_imageARROW"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tomorrow_image2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/tomorrow_imageARROW"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tomorrow_precipitationTV"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/vector_1"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tomorrow_hourTV"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/CardViewToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent">

            <TextView
                android:id="@+id/PerceivedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="18dp"
                android:text="Perceived"
                android:textColor="@color/black"
                android:textSize="@dimen/text_min_dimensions_card_info" />

            <TextView
                android:id="@+id/Temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="37dp"
                android:text="20Â°"
                android:textColor="@color/black"
                android:textSize="@dimen/text_min_dimensions_card_info"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/UV_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="198dp"
                android:layout_marginTop="18dp"
                android:text="UV Index"
                android:textColor="@color/black"
                android:textSize="@dimen/text_min_dimensions_card_info" />

            <TextView
                android:id="@+id/UV_Ind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="198dp"
                android:layout_marginTop="37dp"
                android:text="1/10"
                android:textColor="@color/black"
                android:textSize="@dimen/text_min_dimensions_card_info"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="20dp" />

            <TextView
                android:id="@+id/Humidity_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="84dp"
                android:text="Humidity"
                android:textColor="@color/black"
                android:textSize="@dimen/text_min_dimensions_card_info" />

            <TextView
                android:id="@+id/Humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="106dp"
                android:text="80%"
                android:textColor="@color/black"
                android:textSize="@dimen/text_min_dimensions_card_info"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Wind_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="198dp"
                android:layout_marginTop="84dp"
                android:text="Wind"
                android:textColor="@color/black"
                android:textSize="@dimen/text_min_dimensions_card_info" />

            <TextView
                android:id="@+id/Wind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="198dp"
                android:layout_marginTop="106dp"
                android:text="NNE 1km/h"
                android:textColor="@color/black"
                android:textSize="@dimen/text_min_dimensions_card_info"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/vector_1"
                android:layout_marginStart="20dp"
                android:layout_marginTop="140dp"
                android:layout_marginEnd="20dp" />

            <TextView
                android:id="@+id/Coverage_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="153dp"
                android:text="Coverage"
                android:textColor="@color/black"
                android:textSize="@dimen/text_min_dimensions_card_info" />

            <TextView
                android:id="@+id/Coverage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="175dp"
                android:layout_marginBottom="19dp"
                android:text="3%"
                android:textColor="@color/black"
                android:textSize="@dimen/text_min_dimensions_card_info"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Rain_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200dp"
                android:layout_marginTop="153dp"
                android:text="Rain"
                android:textColor="@color/black"
                android:textSize="@dimen/text_min_dimensions_card_info" />

            <TextView
                android:id="@+id/Rain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="198dp"
                android:layout_marginTop="175dp"
                android:text="0cm"
                android:textColor="@color/black"
                android:textSize="@dimen/text_min_dimensions_card_info"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

