<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="71dp">


    <TextView
        android:id="@+id/tvCityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Palermo, "
        android:textColor="@color/purple_700"
        android:textSize="@dimen/text_min_dimensions_card_info"
        android:layout_marginTop="61dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRegionName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sicilia"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/text_min_dimensions_card_info"
        app:layout_constraintBottom_toBottomOf="@+id/tvCityName"
        app:layout_constraintStart_toEndOf="@+id/tvCityName"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tvTomorrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Domani,"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/text_norm_dimensions_card_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCityName" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LunedÃ¬ 11 settembre"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/text_min_dimensions_card_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTomorrow" />


</androidx.constraintlayout.widget.ConstraintLayout>